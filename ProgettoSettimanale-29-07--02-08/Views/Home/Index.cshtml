@model IEnumerable<ProgettoSettimanale_29_07__02_08.DataLayer.Entities.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">HomePage</h1>
    @foreach(var p in Model)
    {
        <div class="card col-md-3">
        <img src="@p.PhotoUrl" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">@p.Name</h5>
              <p class="card-text">
                  Ingredienti:
                    @if (p.Ingredients != null && p.Ingredients.Any())
                    {
                        <ul>
                            @foreach (var ingredient in p.Ingredients)
                            {
                                <li>@ingredient.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Ingredienti non disponibili</span>
                    }
              </p>
              <p>Tempo di consegna: @p.DeliveryTime min</p>
              <p>@p.Price.ToString("C")</p>
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@p.Id" />
                    <div class="form-group">
                        <label for="quantity">Quantità:</label>
                        <input type="number" name="quantity" value="1" min="1" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Aggungi al carrello</button>
                </form>
            </div>
        </div>
    }
</div>
