@model IEnumerable<ProgettoSettimanale_29_07__02_08.DataLayer.Entities.Product>

@{
    ViewData["Title"] = "ProductList";
}

<div class="row custom-bg-2 px-4 py-3 text-light rounded">
    <h1>Lista Prodotti</h1>
    <p class="py-3">
        <a asp-action="CreateProduct" class="custom-btn link-light text-decoration-none">Crea un nuovo prodotto</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhotoUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.Price.ToString("C")
                    </td>
                    <td class="w-25">
                        <div class="w-75">
                            <img src="@Html.DisplayFor(modelItem => item.PhotoUrl)" class="img-fluid" />
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryTime)
                    </td>
                    <td>
                        <div class="d-flex flex-column">
                            <a asp-action="EditProduct" asp-route-id="@item.Id" class="custom-btn link-light text-decoration-none">Modifica</a>
                            <a asp-action="ProductDetails" asp-route-id="@item.Id" class="custom-btn link-light text-decoration-none">Dettagli</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="custom-btn link-light text-decoration-none">Elimina</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
